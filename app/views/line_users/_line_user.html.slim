tr
  td
    .flex.items-center.space-x-2
      .avatar
        .w-12.rounded-full
          = image_tag line_user.picture_url
      div
        .font-bold
          = line_user.display_name
        .text-sm.opacity-50
          = line_user.status_i18n
  td.pl-0
    .flex.float-right
      .flex-none.pr-2
        - if line_user.notification_on?
          = button_to 'OFF', line_user_path(line_user, notification: 'off'), method: :patch, class: 'button btn btn-info'
        - else 
          = button_to 'ON', line_user_path(line_user, notification: 'on'), method: :patch, class: 'button btn btn-info'
      .flex-none
